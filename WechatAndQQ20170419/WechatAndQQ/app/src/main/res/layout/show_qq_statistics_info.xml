<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/show_qq_statistics_info"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.tian.wechatandqq.Activity.Show_statistics">



	<com.github.mikephil.charting.charts.CombinedChart
		android:layout_width="match_parent"
		android:layout_height="250dp"
		android:id="@+id/qq_com_chart"/>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:id="@+id/average_use"
			android:layout_width="wrap_content"
			android:text="平均使用时长："
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/average_use_set"
			android:text=""
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/average_open"
			android:text="平均打开次数："
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/average_open_set"
			android:text=""
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/today_usetime"
			android:text="今日使用时长："
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/today_usetime_set"
			android:text=""
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/today_open"
			android:text="今日打开次数："
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/today_open_set"
			android:text=""
			android:layout_height="wrap_content"/>
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/package_name"
			android:text=""
			android:layout_height="wrap_content"/>
	</LinearLayout>


</LinearLayout>
