<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_weekly_report"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:orientation="vertical"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.tian.wechatandqq.Activity.WeeklyReport">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/lastWeek_total_open"
			android:text="上周使用情况"
			android:layout_height="wrap_content"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/lastWeek_total_time_used"
				android:text="上周总使用时长:"
				android:layout_height="wrap_content"/>
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/lastWeek_total_time_used__set"
				android:text="test"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/lastWeek_longest_use_app"
				android:text="上周使用最长时间的app:"
				android:layout_height="wrap_content"/>
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/lastWeek_lonngest_use_app_set"
				android:text="test2"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/lastWeek_after_ten_usd"
				android:text="影响休息的app:"
				android:layout_height="wrap_content"/>
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/lastWeek_after_ten_usd_set"
				android:text="test2"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/thisWeek_total_open"
			android:text="本周使用情况"
			android:layout_height="wrap_content"/>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/thisWeek_total_time_used"
				android:text="本周总使用时长:"
				android:layout_height="wrap_content"/>
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/thisWeek_total_time_used_set"
				android:text="test"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/thisWeek_longest_use_app"
				android:text="本周使用最长时间的app:"
				android:layout_height="wrap_content"/>
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/thisWeek_lonngest_use_app_set"
				android:text="test2"
				android:layout_height="wrap_content"/>
		</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/thisWeek_after_ten_usd"
				android:text="影响休息的app:"
				android:layout_height="wrap_content"/>
			<TextView
				android:layout_width="wrap_content"
				android:id="@+id/thisWeek_after_ten_usd_set"
				android:text="test2"
				android:layout_height="wrap_content"/>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>
